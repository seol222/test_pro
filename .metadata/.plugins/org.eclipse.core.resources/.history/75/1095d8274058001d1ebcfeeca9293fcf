<script>
$(document).ready(function(){
	$("input[type=submit]").on("click",function(e){
		//a태그, 폼 이벤트를 없애는 것
		e.preventDefault();
		//let mb_id = document.getElementById('mb_id').value;
		let mb_id = $('#mb_id').val().trim();
		let mb_pw = $('#mb_pw').val().trim();
		
		if(mb_id ==''){
			alert('아이디를 6~16글자 입력하셔야합니다.');
			
		}else if(mb_id.length < 6 || mb_id.length > 16 ){
			alert('아이디를 6~16글자 입력하셔야합니다.');
			$("#mb_id").css("color","red");
		}else if(mb_pw ==''){
			alert('비밀번호를 6~16글자 입력하셔야합니다.');
		}else if(mb_pw.length < 6 || mb_pw.length >16 ){
			alert('비밀번호를 6~16글자 입력하셔야합니다.');
		}else{
			$('form').submit();
			
		}
				
	});
});
</script>


